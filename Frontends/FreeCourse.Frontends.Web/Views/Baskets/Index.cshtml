
@{
    ViewData["Title"] = "Sepet";
}
@model BasketViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sepet</h5>

                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Kurs İsim</th>
                            <th>Kurs Fiyat</th>
                            <th>İşlemler</th>
                        </tr>

                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price @(Model.HasDiscount ?  $" - Indirimli Fiyatı {item.GetCurrentPrice} (%{Model.DiscountRate.Value} uygulandı)" : string.Empty)</td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Baskets" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId">Sil</a>
                                </td>
                            </tr>
                        }

                        @if (Model.HasDiscount)
                        {
                            <tr>
                                <td>İndirim Oranı</td>
                                <th colspan="2">% @Model.DiscountRate.Value</th>
                            </tr>
                        }

                        <tr>
                            <td>@(Model.HasDiscount ? "İndirimli Fiyat": "Toplam Fiyat")</td>
                            <th colspan="2">@Model.TotalPrice</th>
                        </tr>
                    </table><form asp-controller="Baskets" asp-action="ApplyDiscount">
                        @if (Model.HasDiscount)
                        {
                            <div class="alert alert-success">
                                "@Model.DiscountCode" indirim kodu uygulandı <a asp-controller="Baskets" asp-action="CancelApplyDiscount">(İptal Et)</a>
                            </div>
                        }

                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="input.Code" />
                            <button type="submit" class="btn btn-outline-secondary">Uygula</button>
                        </div>

                        @if (TempData["discountStatus"] != null && (bool)TempData["discountStatus"] == false)
                        {
                            <div class="alert alert-warning">"@Model.DiscountCode" indirim kodu uygulanamadı</div>

                        }

                        @if (TempData["discountError"] != null)
                        {
                            <div class="alert alert-danger">@TempData["discountError"]</div>
                        }
                    </form>
                    <a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">Ödeme Bilgileri</a>
                    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Alışverişe Devam et</a>
                }
                else
                {
                    <div class="alert alert-info">Sepet Boş</div>
                }
            </div>
        </div>
    </div>
</div>


