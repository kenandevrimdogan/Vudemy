
@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme Geçmişi</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Sipariş(Ödeme) No</th>
                            <th>Satın Alma Tarihi</th>
                            <th>Detaylar</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">
                                        <tr>
                                            <th>Kurs İsmi</th>
                                            <th>Kurs Fiyat</th>
                                        </tr>

                                        @foreach (var order in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@order.ProductName</td>
                                                <td>@order.Price</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Satın Aldınığınz Herhangi Bir Kurs Bulunmamaktadır</div>
                }
            </div>
        </div>
    </div>
</div>
